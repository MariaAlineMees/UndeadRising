        if (modelo.getDiaAtual() == 10 && !modelo.isEmCombate()) {
            int resposta = JOptionPane.showConfirmDialog(telaPrincipal,
                    """
                    Este √© o d√©cimo dia! O Zumbi Alfa aparecer√°!\nDeseja enfrent√°-lo agora?""",
                    "Dia Final", JOptionPane.YES_NO_OPTION);

